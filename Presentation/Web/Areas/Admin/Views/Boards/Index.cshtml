@model TaskoMask.Application.ViewMoldes.BoardListViewModel
@{
    ViewData["Title"] = "boards list";
}

<ul class="nav nav-tabs">
    <li class='nav-item'>
        <a class='nav-link active' data-toggle='tab' href='#boards'>@Model.Project.Name boards</a>
    </li>
    <li class='nav-item'>
        <a class='nav-link ' data-toggle='tab' href='#tasks'>pending tasks</a>
    </li>
</ul>
<br />
<div class="tab-content">
    <div class='tab-pane container fade in show active' id='boards'>
        <div class="container">
            <div class="row">
                @foreach (var item in Model.Boards)
                {
                    <div class="col-md-4 col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h6><strong>@item.Name</strong></h6>
                            </div>
                            <div class="card-body">
                                <p class="card-text">
                                    @item.Description
                                </p>
                                <table>
                                    <tr>
                                        <td>all tasks: </td>
                                        <td>0</td>
                                    </tr>
                                    <tr>
                                        <td>pending tasks: </td>
                                        <td>0</td>
                                    </tr>
                                    <tr>
                                        <td>assigned users: </td>
                                        <td>0</td>
                                    </tr>
                                </table>
                                <hr />
                                <a href="@Url.Action(action: "index", controller: "cards", values: new { boardId = item.Id })" class="btn btn-sm btn-outline-primary">
                                    cards
                                </a>
                                <a href="@Url.Action(action: "update", controller: "boards", values: new { id = item.Id })" class="btn btn-sm btn-outline-warning">
                                    update
                                </a>
                                <a href="@Url.Action(action: "delete", controller: "boards", values: new { id = item.Id })" class="btn btn-sm btn-outline-danger">
                                    delete
                                </a>
                            </div>
                        </div>
                    </div>
                }

                <div class="col-md-4 col-sm-12">
                    <div class="card">
                        <div class="card-header">
                            <h6><strong>Create New Board</strong></h6>
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                <a href="@Url.Action(action: "create", controller: "boards", values: new { projectId=Model.Project.Id })">
                                    click here to create new Board
                                </a>
                            </p>
                            <table>
                                <tr>
                                    <td>all tasks: </td>
                                    <td>?</td>
                                </tr>
                                <tr>
                                    <td>pending tasks: </td>
                                    <td>?</td>
                                </tr>
                                <tr>
                                    <td>assigned users: </td>
                                    <td>?</td>
                                </tr>
                            </table>
                            <hr />
                            <a href="#" class="btn btn-sm btn-outline-dark">
                                cards
                            </a>
                            <a href="#" class="btn btn-sm btn-outline-dark">
                                update
                            </a>
                            <a href="#" class="btn btn-sm btn-outline-dark">
                                delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class='tab-pane container fade' id='tasks'>
        <h3>pending tasks </h3>
        <p>list of all pending tasks from all boards.</p>
    </div>
</div>
