@model TaskoMask.Application.Core.ViewModels.PermissionDetailViewModel

@{
    ViewBag.Title = "Update Permission";
}

<div class="grid-50 tablet-grid-50 mobile-grid-100">
    <div class="block">
        <div class="block-header">
            <h4>Basic Info</h4>
        </div>
        <div class="block-content">
            @await Html.PartialAsync("_SaveForm", Model.Permission)
        </div>
    </div>
</div>

<div class="grid-50 tablet-grid-50 mobile-grid-100">
    <div class="block">
        <div class="block-header">
            <h4>Roles</h4>
        </div>
        <div class="block-content  has-table">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>@Html.LabelFor(model => model.Roles.FirstOrDefault().Name)</th>
                            <th>@Html.LabelFor(model => model.Roles.FirstOrDefault().PermissionsId)</th>
                            <th><label></label></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Roles)
                        {

                            <tr data-table-row-id="@item.Id">
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.PermissionsId.Length
                                </td>

                                <td>
                                    <div class="btn-group-xs">
                                        <a href="@Url.Action( "update","roles", new { id = item.Id }) " class=" btn btn-primary btn-xs btn-xs-circle">
                                            <i class="fa fa-pencil"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>




@section scripts{

}
