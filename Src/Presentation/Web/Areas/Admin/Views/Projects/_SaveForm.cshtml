@model TaskoMask.Application.Core.Dtos.Team.Projects.ProjectUpsertDto
@{ 
    string actionName =string.IsNullOrEmpty(Model.Id) ? "create" : "update";
}

<div class="row">
    @await Component.InvokeAsync(nameof(DomainValidationSummary))

    <div class="col-md-4 col-sm-12">
        <form asp-action="@actionName">
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.OrganizationId)
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@actionName" class="btn btn-success" />
                <a href="@Url.Action(action:"index",controller:"projects",values:new {organizationId=Model.OrganizationId })" class="btn btn-primary" >Back</a>
            </div>
        </form>
    </div>
</div>