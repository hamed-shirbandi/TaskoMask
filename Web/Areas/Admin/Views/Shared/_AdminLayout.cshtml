<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TaskMask: @ViewData["Title"]</title>
    <link href="~/content/public/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/content/admin/css/admin.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <a class="navbar-brand btn btn-outline-light text-dark-hover" href="@Url.Action(action: "index",controller:"home",values:new { Area=""})">TaskoMask</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action(action: "index",controller:"home",values:new { Area=""})">home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action(action: "index",controller:"dashboard",values:new { Area="admin"})">dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action(action: "update",controller:"user",values:new { Area="admin"})">profile</a>
                </li>
            </ul>
            <div class="form-inline my-2 my-lg-0">
                <a class="btn btn-sm btn-danger my-2 my-sm-0" href="@Url.Action(action: "logout",controller:"account",values:new { Area=""})">Logout</a>
            </div>
        </div>
    </nav>

    <main role="main" class="container">
        @RenderBody()
    </main>
    <footer class="footer">
        <div class="container">
            <span class="text-muted">
                <p>Developed by <a href="https://github.com/hamed-shirbandi" target="_blank">Hamed Shirbandi</a>. Find the source on  <a href="https://github.com/hamed-shirbandi/TaskoMask" target="_blank">GitHub</a></p>
            </span>
        </div>
    </footer>


    <script src="~/content/public/js/jquery.min.js"></script>
    <script src="~/content/public/js/popper.min.js"></script>
    <script src="~/content/public/js/bootstrap.min.js"></script>
    <script src="~/content/admin/js/admin.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
