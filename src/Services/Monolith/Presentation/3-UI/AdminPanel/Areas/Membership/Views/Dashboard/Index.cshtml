@model TaskoMask.Presentation.UI.AdminPanle.Area.Admin.Models.DashboardIndexViewModel
@{
    ViewBag.Title = "Dashboard";
}

<div class="grid-content">
    <div class="grid-20 tablet-grid-50 mobile-grid-100">
        <div class="stat-tiles color-1">
            <div class="stat-tiles-body">
                <div class="stat-icon">
                    <i class="si si-wallet"></i>
                </div>
                <div class="stat-details">
                    <div class="number to-rial font-s22">@Model.OwnersCount</div>
                    <div class="desc">Owners</div>
                </div>
            </div>
        </div>
    </div>
    <div class="grid-20 tablet-grid-50 mobile-grid-100">
        <div class="stat-tiles color-2">
            <div class="stat-tiles-body">
                <div class="stat-icon">
                    <i class="si si-wallet"></i>
                </div>
                <div class="stat-details">
                    <div class="number to-rial font-s22">@Model.OrganizationsCount</div>
                    <div class="desc">Organizations</div>
                </div>
            </div>
        </div>
    </div>
    <div class="grid-20 tablet-grid-50 mobile-grid-100">
        <div class="stat-tiles color-3">
            <div class="stat-tiles-body">
                <div class="stat-icon">
                    <i class="si si-wallet"></i>
                </div>
                <div class="stat-details">
                    <div class="number to-rial font-s22">@Model.ProjectsCount</div>
                    <div class="desc">Projects</div>
                </div>
            </div>
        </div>
    </div>
    <div class="grid-20 tablet-grid-50 mobile-grid-100">
        <div class="stat-tiles color-4">
            <div class="stat-tiles-body">
                <div class="stat-icon">
                    <i class="si si-wallet"></i>
                </div>
                <div class="stat-details">
                    <div class="number to-rial font-s22">@Model.BoardsCount</div>
                    <div class="desc">Boards</div>
                </div>
            </div>
        </div>
    </div>
