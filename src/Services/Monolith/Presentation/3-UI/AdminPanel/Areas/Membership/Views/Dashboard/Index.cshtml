        <div class="block  block-scroll">
            <div class="block-header">
                <h4>New owners on last dayes (fake data)</h4>
            </div>
            <div class="block-content block-scroll height-400">
                <canvas id="new-owners-chart-area" class="chart-canvas" />
            </div>
        </div>
    </div>

    <div class="grid-50 tablet-grid-50 mobile-grid-100">
