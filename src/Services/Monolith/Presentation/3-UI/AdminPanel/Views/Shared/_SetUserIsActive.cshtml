@model TaskoMask.Presentation.UI.AdminPanle.Models.SetUserActiveViewModel

@if (Model.IsActive)
{
    <div class="alert alert-warning">
        <a data-ajax="true" data-ajax-loading="#global-ajax-loading" data-ajax-method="Post" href="@Url.Action( "SetIsActive", new { id = Model.Id, isActive = false }) " data-ajax-confirm="you sure about that?" class=" btn btn-danger">
            Inactivate
        </a>
        This user is currently active and can log in to the panel
    </div>
}
else
{
    <div class="alert alert-warning">
        <a data-ajax="true" data-ajax-loading="#global-ajax-loading" data-ajax-method="Post" href="@Url.Action( "SetIsActive", new { id = Model.Id, isActive = true }) " data-ajax-confirm="you sure about that?" class=" btn btn-success">
            Activate
        </a>
        This user is not active and can't log in to the panel
    </div>
}

